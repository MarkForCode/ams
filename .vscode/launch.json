    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "nodemon",
            "skipFiles": ["<node_internals>/**"],
            "runtimeExecutable": "npm",
            "internalConsoleOptions": "neverOpen",
            "runtimeArgs": ["run", "dev"],
            "outputCapture": "std",
            "env": {
                "NODE_ENV": "development"
            }
        }
    ]
}